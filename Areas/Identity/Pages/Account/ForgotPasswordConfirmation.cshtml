@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Password Reset Sent";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="d-flex align-items-center justify-content-center" style="min-height: 60vh; background-color: #f8f9fa;">
    <div class="col-md-6 col-lg-5 text-center bg-white shadow-sm p-4 rounded">
        <h2 class="text-success fw-bold mb-3">@ViewData["Title"]</h2>
        <p class="text-muted mb-3">
            If an account with that email exists, we’ve sent instructions to reset your password.
        </p>
        <a href="/" class="btn btn-outline-primary mt-2">
            <i class="bi bi-house-door me-1"></i> Back to Home
        </a>
    </div>
</section>
