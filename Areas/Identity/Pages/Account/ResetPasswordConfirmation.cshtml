@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<section class="d-flex align-items-center justify-content-center" style="min-height: 60vh; background-color: #f8f9fa;">
    <div class="col-md-6 col-lg-5 text-center bg-white shadow-sm p-4 rounded">
        <h2 class="text-success fw-bold mb-3">@ViewData["Title"]</h2>
        <p class="text-muted mb-4">Your password has been successfully reset.</p>
        <a asp-page="./Login" class="btn btn-primary">
            <i class="bi bi-box-arrow-in-right me-1"></i> Log In
        </a>
    </div>
</section>

