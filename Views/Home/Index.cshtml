@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";

}

<main class="main">



    <!-- Hero Section -->
    <section id="hero" class="hero section">

        <div class="container d-flex flex-column justify-content-center align-items-center text-center position-relative" data-aos="zoom-out">
            <img src="~/HomeDesign/assets/img/hero-img.svg" class="img-fluid animated" alt="CareerBuilderX Illustration">

            <h1>Welcome to <span>CareerBuilderX</span></h1>

            <p class="mt-3">
                Build professional resumes and personal portfolios effortlessly using AI-powered tools.
                <br>Designed for graduates, freelancers, and professionals.
            </p>

            <div class="d-flex mt-4 gap-3">
                @if (!User.IsInRole("EndUser"))
                {
                <a href="/account/register" class="btn-get-started scrollto">Create an Account</a>
                }

            </div>
        </div>

    </section>

    <!-- /Hero Section -->
    <!-- Featured Services Section -->
    <section id="featured-services" class="featured-services section">

        <div class="container">


            <div class="row gy-4">

                <!-- Resume Builder -->
                <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-item position-relative">
                        <div class="icon"><i class="bi bi-file-earmark-text icon"></i></div>
                        <h4><a href="/resume/landing" class="stretched-link">AI Resume Builder</a></h4>
                        <p>Create a professional resume in seconds using our AI-powered generation tools.</p>
                    </div>
                </div>

                <!-- Portfolio Creator -->
                <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-item position-relative">
                        <div class="icon"><i class="bi bi-person-badge icon"></i></div>
                        <h4><a href="/portfolio/landing" class="stretched-link">Portfolio Creator</a></h4>
                        <p>Build a personalized portfolio page to showcase your projects, services, and skills.</p>
                    </div>
                </div>

                <!-- Shareable Public Link -->
                <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="300">
                    <div class="service-item position-relative">
                        <div class="icon"><i class="bi bi-link-45deg icon"></i></div>
                        <h4><a href="#" class="stretched-link">Public Profile Link</a></h4>
                        <p>Get a unique shareable link to your portfolio and share it with employers or clients.</p>
                    </div>
                </div>

                <!-- All-in-One Dashboard -->
                <div class="col-xl-3 col-md-6 d-flex" data-aos="fade-up" data-aos-delay="400">
                    <div class="service-item position-relative">
                        <div class="icon"><i class="bi bi-speedometer2 icon"></i></div>
                        <h4><a href="#" class="stretched-link">Simple Dashboard</a></h4>
                        <p>Manage all your resumes and portfolios from one simple, user-friendly dashboard.</p>
                    </div>
                </div>

            </div>

        </div>
        </div>

    </section><!-- /Featured Services Section -->
    <!-- About Section -->
    <section id="about" class="about section">

        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>About CareerBuilderX</h2>
            <p>Your gateway to smart career development with AI-powered tools.</p>
        </div><!-- End Section Title -->

        <div class="container" data-aos="fade-up">

            <div class="row g-4 g-lg-5" data-aos="fade-up" data-aos-delay="200">

                <div class="col-lg-5">
                    <div class="about-img">
                        <img src="~/HomeDesign/assets/img/about-portrait.svg" class="img-fluid" alt="About CareerBuilderX">
                    </div>
                </div>

                <div class="col-lg-7">
                    <h3 class="pt-0 pt-lg-5">Empowering graduates, freelancers, and professionals to showcase their best selves online.</h3>

                    <!-- Tabs -->
                    <ul class="nav nav-pills mb-3">
                        <li><a class="nav-link active" data-bs-toggle="pill" href="#about-tab1">How It Works</a></li>
                        <li><a class="nav-link" data-bs-toggle="pill" href="#about-tab2">Key Features</a></li>
                        <li><a class="nav-link" data-bs-toggle="pill" href="#about-tab3">Why Choose Us</a></li>
                    </ul><!-- End Tabs -->
                    <!-- Tab Content -->
                    <div class="tab-content">

                        <!-- Tab 1: How It Works -->
                        <div class="tab-pane fade show active" id="about-tab1">
                            <p class="fst-italic">CareerBuilderX helps you create AI-enhanced resumes and portfolios through a simple, guided process.</p>

                            <div class="d-flex align-items-center mt-4">
                                <i class="bi bi-check2"></i>
                                <h4>Fill out a short form</h4>
                            </div>
                            <p>Enter your basic information, career goals, skills, and project ideas.</p>

                            <div class="d-flex align-items-center mt-4">
                                <i class="bi bi-check2"></i>
                                <h4>Let AI generate content</h4>
                            </div>
                            <p>Our AI transforms your input into professional summaries, experience sections, and more.</p>

                            <div class="d-flex align-items-center mt-4">
                                <i class="bi bi-check2"></i>
                                <h4>Preview and download</h4>
                            </div>
                            <p>Review your resume, make changes if needed, and download it as a professional PDF file. You can also publish your portfolio with a unique public link to share online.</p>
                        </div>

                        <!-- Tab 2: Key Features -->
                        <div class="tab-pane fade" id="about-tab2">
                            <p class="fst-italic">Everything you need to present yourself professionally — in one place.</p>

                            <div class="d-flex align-items-center mt-4">
                                <i class="bi bi-check2"></i>
                                <h4>AI Resume Builder</h4>
                            </div>
                            <p>Create clean, modern CVs with smart auto-completion and formatting.</p>

                            <div class="d-flex align-items-center mt-4">
                                <i class="bi bi-check2"></i>
                                <h4>Personal Portfolio Generator</h4>
                            </div>
                            <p>Design and publish a public portfolio showcasing your projects and skills.</p>

                            <div class="d-flex align-items-center mt-4">
                                <i class="bi bi-check2"></i>
                                <h4>One-click sharing</h4>
                            </div>
                            <p>Get a shareable public link for your portfolio and download your resume in PDF format.</p>
                        </div>

                        <!-- Tab 3: Why Choose Us -->
                        <div class="tab-pane fade" id="about-tab3">
                            <p class="fst-italic">What makes CareerBuilderX stand out?</p>

                            <div class="d-flex align-items-center mt-4">
                                <i class="bi bi-check2"></i>
                                <h4>Fast and intuitive</h4>
                            </div>
                            <p>No design or writing skills required — just fill in and go.</p>

                            <div class="d-flex align-items-center mt-4">
                                <i class="bi bi-check2"></i>
                                <h4>AI at your service</h4>
                            </div>
                            <p>Our GPT-based engine makes your content look professional and compelling.</p>

                            <div class="d-flex align-items-center mt-4">
                                <i class="bi bi-check2"></i>
                                <h4>Completely free for individuals</h4>
                            </div>
                            <p>Enjoy the tools at no cost as part of our mission to support career growth.</p>
                        </div>

                    </div><!-- End Tab Content -->

                </div>
            </div>
        </div>
    </section>
    <!-- /About Section -->
    <!-- Contact Section -->
    <section id="contact" class="contact section">

        <!-- Section Title -->
        <div class="container section-title" data-aos="fade-up">
            <h2>Contact Us !</h2>
            <p>We'd love to hear from you! Whether you have questions, suggestions, or partnership ideas — drop us a message.</p>
        </div><!-- End Section Title -->

        <div class="container" data-aos="fade">

            <div class="row gy-5 gx-lg-5">

                <!-- Contact Info -->
                <div class="col-lg-4">
                    <div class="info">
                        <h3>Get in touch</h3>
                        <p>If you have any technical issues or business inquiries, feel free to reach out.</p>

                        <div class="info-item d-flex">
                            <i class="bi bi-geo-alt flex-shrink-0"></i>
                            <div>
                                <h4>Location:</h4>
                                <p>Amman, Jordan</p>
                            </div>
                        </div>

                        <div class="info-item d-flex">
                            <i class="bi bi-envelope flex-shrink-0"></i>
                            <div>
                                <h4>Email:</h4>
                                <p>support@careerbuilderx.com</p>
                            </div>
                        </div>

                        <div class="info-item d-flex">
                            <i class="bi bi-phone flex-shrink-0"></i>
                            <div>
                                <h4>Call:</h4>
                                <p>+962 7 9999 9999</p>
                            </div>
                        </div>
                    </div>
                </div><!-- End Contact Info -->
                <!-- Contact Form -->
                <div class="col-lg-8">
                    <form  method="post" role="form" class="php-email-form">
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="text" name="name" class="form-control" id="name" placeholder="Your Name" required>
                            </div>
                            <div class="col-md-6 form-group mt-3 mt-md-0">
                                <input type="email" class="form-control" name="email" id="email" placeholder="Your Email" required>
                            </div>
                        </div>
                        <div class="form-group mt-3">
                            <input type="text" class="form-control" name="subject" id="subject" placeholder="Subject" required>
                        </div>
                        <div class="form-group mt-3">
                            <textarea class="form-control" name="message" rows="6" placeholder="Message" required></textarea>
                        </div>
                        <div class="my-3">
                            <div class="loading">Loading</div>
                            <div class="error-message"></div>
                            <div class="sent-message">Your message has been sent. Thank you!</div>
                        </div>
                        <div class="text-center"><button type="submit">Send Message</button></div>
                    </form>
                </div><!-- End Contact Form -->

            </div>
        </div>
    </section><!-- /Contact Section -->


</main>
