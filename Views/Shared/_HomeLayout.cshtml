<!DOCTYPE html>

<html>
<head>
    <!-- Favicons -->
    <link href="~/HomeDesign/assets/img/target.png" rel="icon">
    <link href="~/HomeDesign/assets/img/target.png" rel="apple-touch-icon">
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" rel="stylesheet" />

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Source+Sans+Pro:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-p6O+X0RI4tK8RUYmsP1rV+eC1nvZ8U6XmxuR+vAtO6n6yB7MEfZ8zKfHDOhXfyjzT2cjX69VdY1wq/OIc2XvUg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- Vendor CSS Files -->
    <link href="~/HomeDesign/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/HomeDesign/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/HomeDesign/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/HomeDesign/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/HomeDesign/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />

    <link rel="stylesheet" href="~/AdminDesign/assets/extensions/simple-datatables/style.css">
    <link rel="stylesheet" href="~/AdminDesign/assets/compiled/css/table-datatable.css">

    <!-- Main CSS File -->
    <link href="~/HomeDesign/assets/css/main.css" rel="stylesheet">
    <title>@ViewBag.Title</title>
</head>
<body>

    <header id="header" class="header d-flex align-items-center sticky-top">
        <div class="container-fluid position-relative d-flex align-items-center justify-content-between">

            <a asp-controller="Home" asp-action="Index" class="logo d-flex align-items-center me-auto me-xl-0">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1 class="sitename">CareerBuilder</h1>
                <span>X</span>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a asp-controller="Home" asp-action="Index" class="active">Home<br></a></li>
                    <li><a href="~/#about">About</a></li>
                    <li><a asp-controller="Resume" asp-action="Landing">Resume Builder</a></li>
                    <li><a asp-controller="Portfolio" asp-action="Landing">Portfolio Builder</a></li>
                    <li><a href="~/#contact">Contact</a></li>
                    @if (User.IsInRole("EndUser"))
                    {
                        <li><a asp-controller="Resume" asp-action="ListOfResumes">My Resumes</a></li>
                    }
                    @if (User.IsInRole("EndUser"))
                    {
                        <li><a asp-controller="Portfolio" asp-action="ListOfPortfolios">My Portfolios</a></li>
                    }

                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>
            @if (!User.IsInRole("EndUser"))
            {
                <a class="btn-getstarted" asp-area="Identity" asp-page="/Account/Login">Get Started</a>
            }
            else
            {
                <form asp-area="Identity" asp-page="/Account/Logout" method="post" class="d-inline">
                    <button type="submit" class="btn-getstarted">Logout</button>
                </form>
            }

            

        </div>
    </header>
    <div>
        @RenderBody()
    </div>

    <footer id="footer" class="footer dark-background">

        <div class="footer-top">
            <div class="container">
                <div class="row gy-4">

                    <!-- Logo and Contact Info -->
                    <div class="col-lg-4 col-md-6 footer-about">
                        <a href="/" class="logo d-flex align-items-center">
                            <span class="sitename">CareerBuilderX</span>
                        </a>
                        <div class="footer-contact pt-3">
                            <p>Amman, Jordan</p>
                            <p class="mt-3"><strong>Phone:</strong> <span>+962 7 9999 9999</span></p>
                            <p><strong>Email:</strong> <span>support@careerbuilderx.com</span></p>
                        </div>
                    </div>

                    <!-- Useful Links -->
                    <div class="col-lg-2 col-md-3 footer-links">
                        <h4>Useful Links</h4>
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li><a href="#about">About</a></li>
                            <li><a href="#featured-services">Features</a></li>
                            <li><a href="#contact">Contact</a></li>
                            <li><a href="#">Terms of Service</a></li>
                        </ul>
                    </div>

                    <!-- Services Summary -->
                    <div class="col-lg-2 col-md-3 footer-links">
                        <h4>What We Offer</h4>
                        <ul>
                            <li><a href="/resume/landing">AI Resume Builder</a></li>
                            <li><a href="/portfolio/landing">Portfolio Generator</a></li>
                            <li><a href="#">PDF Export</a></li>
                            <li><a href="#">Public Portfolio Link</a></li>
                        </ul>
                    </div>

                    <!-- Empty or Future Use -->
                    <div class="col-lg-4 col-md-6 footer-links">
                        <h4>Follow Us</h4>
                        <p>Connect with us on social media for updates and tips:</p>
                        <div class="social-links mt-3">
                            <a href="#"><i class="bi bi-twitter-x"></i></a>
                            <a href="#"><i class="bi bi-facebook"></i></a>
                            <a href="#"><i class="bi bi-instagram"></i></a>
                            <a href="#"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <!-- Copyright -->
        <div class="copyright text-center">
            <div class="container d-flex flex-column flex-lg-row justify-content-center justify-content-lg-between align-items-center">

                <div class="d-flex flex-column align-items-center align-items-lg-start">
                    <div>
                        © Copyright <strong><span>CareerBuilderX</span></strong>. All Rights Reserved
                    </div>
                    <div class="credits">
                        Designed using <a href="https://bootstrapmade.com/">BootstrapMade</a>
                    </div>
                </div>

            </div>
        </div>

    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/HomeDesign/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/HomeDesign/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/HomeDesign/assets/vendor/aos/aos.js"></script>
    <script src="~/HomeDesign/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/HomeDesign/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/HomeDesign/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/HomeDesign/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>


    <!-- JS: مكتبة Simple DataTables -->
    <script src="~/AdminDesign/assets/extensions/simple-datatables/umd/simple-datatables.js"></script>

    <!-- JS: ملف التهيئة -->
    <script src="~/AdminDesign/assets/static/js/pages/simple-datatables.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Main JS File -->
    <script src="~/HomeDesign/assets/js/main.js"></script>
    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
    @await RenderSectionAsync("Scripts", required: false)
    

</body>
</html>
