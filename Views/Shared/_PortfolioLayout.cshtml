<!DOCTYPE html>

<html>
<head>
    <!-- Favicons -->
    <link href="~/HomeDesign/assets/img/target.png" rel="icon">
    <link href="~/HomeDesign/assets/img/target.png" rel="apple-touch-icon">
    <!-- Swiper CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />


    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/PortfolioDesign/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/PortfolioDesign/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/PortfolioDesign/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/PortfolioDesign/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/PortfolioDesign/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/PortfolioDesign/assets/css/main.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <style>
        /* الزر الأزرق للكاروسيل */
        .carousel-control-prev-icon,
        .carousel-control-next-icon {
            background-color: #0d6efd;
            border-radius: 50%;
            width: 2rem;
            height: 2rem;
        }

        .carousel-control-prev,
        .carousel-control-next {
            z-index: 2;
        }

        /* النقاط */
        .carousel-indicators [data-bs-target] {
            background-color: #0d6efd;
            width: 10px;
            height: 10px;
            border-radius: 50%;
        }

        .carousel-indicators {
            position: static;
            margin-top: 20px;
        }

        /* إصلاح التراكب مع القائمة الجانبية */
        #projectCarousel {
            z-index: 1;
            position: relative;
        }
    </style>


</head>
<body>
    <header id="header" class="header d-flex flex-column justify-content-center">

        <i class="header-toggle d-xl-none bi bi-list"></i>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li>
                    <a href="#hero" class="active">
                        <i class="bi bi-house-door-fill navicon"></i><span>Home</span>
                    </a>
                </li>
                <li>
                    <a href="#about">
                        <i class="bi bi-person-vcard navicon"></i><span>About</span>
                    </a>
                </li>
                <li>
                    <a href="#skills">
                        <i class="bi bi-lightning-charge navicon"></i><span>Skills</span>
                    </a>
                </li>
                <li>
                    <a href="#services">
                        <i class="bi bi-gear-fill navicon"></i><span>Services</span>
                    </a>
                </li>
                <li>
                    <a href="#projects">
                        <i class="bi bi-kanban navicon"></i><span>Projects</span>
                    </a>
                </li>
                
            </ul>
        </nav>



    </header>
    <div>
        @RenderBody()
    </div>
    <footer id="footer" class="footer position-relative light-background">
        <div class="container">
            <div class="container">
                <div class="copyright">
                    <span>Copyright</span> <strong class="px-1 sitename">Alex Smith</strong> <span>All Rights Reserved</span>
                </div>
                <div class="credits">
                    <!-- All the links in the footer should remain intact. -->
                    <!-- You can delete the links only if you've purchased the pro version. -->
                    <!-- Licensing information: https://bootstrapmade.com/license/ -->
                    <!-- Purchase the pro version with working PHP/AJAX contact form: [buy-url] -->
                    Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Preloader -->
    <div id="preloader"></div>

    <!-- Vendor JS Files -->
    <script src="~/PortfolioDesign/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/PortfolioDesign/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/PortfolioDesign/assets/vendor/aos/aos.js"></script>
    <script src="~/PortfolioDesign/assets/vendor/typed.js/typed.umd.js"></script>
    <script src="~/PortfolioDesign/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/PortfolioDesign/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/PortfolioDesign/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/PortfolioDesign/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/PortfolioDesign/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <script src="~/PortfolioDesign/assets/vendor/swiper/swiper-bundle.min.js"></script>

    <!-- Main JS File -->
    <script src="~/PortfolioDesign/assets/js/main.js"></script>

    <!-- AOS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet" />

    <!-- GSAP + ScrollTrigger -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

    <!-- في نهاية الـ <body> -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init({
            duration: 800,
            once: true
        });

        gsap.registerPlugin(ScrollTrigger);

        // مثال: تحريك العنوان في الهيرو
        gsap.from("#hero .display-4", {
            y: -50,
            opacity: 0,
            duration: 1,
            ease: "power3.out",
            scrollTrigger: {
                trigger: "#hero",
                start: "top center"
            }
        });
    </script>

</body>
</html>
